class Passaro:
    def voar(self):
        print("Eu consiguuuu voar...")

class Pardal(Passaro):
    def voar(self):
        super().voar()

class Avestruz(Passaro):
    def voar(self):
        print("Num sabe voar, avestruz não voa!")

#aqui é o polimorfismo
def plano_voo(obj):
    obj.voar()

p1 = Pardal()
p2 = Avestruz()

plano_voo(p1)
plano_voo(p2)
